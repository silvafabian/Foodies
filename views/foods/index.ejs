<%- include('../partials/html-head') %>
<link 
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="/stylesheets/index.css">
<%- include('../partials/nav') %>

<section>
  <h1>Food! 🍔 🌭 🍕</h1>
  <% if (user) { %>
    <h2>Add some Food!</h2>
    <form action="/foods" method="POST">
      <label>
        Name: 
        <input type="text" name="name" autocomplete="off">
      </label>
      <br>
      <label>
        Ingredients:
        <input type="text" name="ingredients">
      </label>
      <br>
      <label>
        Prep Time:
        <input type="number" name="prepTime" min="1" max="1000">
      </label>
      <br>
      <button type="submit">Add Food</button>
    </form>
  <% } %>
  <h2>Explore new food!</h2>
	<ul>
  <% foods.forEach(food => { %>
    <div class="card">
      <div class="card-body">
        <p class="card-text"><%= food.name %></p>
      </div>
      <button><a class="food-details" href="/foods/<%= food._id %>">Details</a></button>
    </div>
  <% }) %>
  </ul>
</section>



<%- include('../partials/footer') %>