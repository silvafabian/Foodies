<%- include('../partials/html-head') %>
<link 
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="/stylesheets/index.css">
<%- include('../partials/nav') %>

<section>
  <h1>Food! üçî üå≠ üçï</h1>
  <% if (user) { %>
    <h2>Add some Food!</h2>
    <form action="/foods" method="POST" class="add-food">
      <label class="prep-time">
        <p>Name:</p>  
        <input type="text" name="name" autocomplete="off">
      </label>
      <br>
      <label class="prep-time">
        <p>Ingredients:</p> 
        <input type="text" name="ingredients">
      </label>
      <br>
      <label class="prep-time">
        <p>Prep Time:</p>
        <input type="number" name="prepTime" min="1" max="1000">
      </label>
      <br>
      <div class="direction-form">
        <label for="content-textarea">Directions:</label>
        <textarea name="directions" class="content-textarea"></textarea>
      </div>
      <button type="submit" id="add-food">Add Food</button>
    </form>
  <% } %>
  <h3>Explore new food!</h3>
	<ul>
  <% foods.forEach(food => { %>
    <div class="card">
      <div class="card-body">
        <p class="card-text">Dish: <%= food.name %></p>
        <br>
        <p class="card-text">Time: <%= food.prepTime %></p>
      </div>
      <button class="food-details"><a class="food-details" href="/foods/<%= food._id %>">Details</a></button>
    </div>
  <% }) %>
  </ul>
</section>



<%- include('../partials/footer') %>